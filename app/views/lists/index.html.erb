
<h1> My Task Lists</h1>

<table class='table'>
  <% index = 0 %>

  <thead class="thead">
    <th>No.</th>
    <th>Title</th>
    <th colspan="2">Options</th>
  </thead>
  <tbody>
  <% @lists.each do |list| %>
    <td>
      <%index += 1%>
      <%= index%>
    </td>
    <td><%= list.name %></td>
    <td><%= link_to 'Edit', edit_list_path(list), method: :get%></td>
    <td><%= link_to 'Show', list_tasks_path(list), method: :get%></td>
    <td><%= link_to 'Destroy', list_path(list), method: :delete%></td>
  </tbody>
  <% end %>
</table>

<hr />
<h2>Create a Task</h2>
<%= simple_form_for @list do |f| %>
  <%= f.input :name, label: 'Task name' %>
  <%= f.button :submit %>
<% end %>
<hr />
