<br>

<div class="container">
<div class="card text-center">
  <div class="card-header">
    <h2>&#x270E; <%= @task.title %></h2>
  </div>
  <div class="card-body
  <%if @task.completed%>
    card-completed
  <% end %>

  ">
  <br>
    <p class="card-text">Details: <%= @task.details %></p>
    <p class="card-text">Due Date: <%= @task.due_date %></p>
    <p><%= image_tag @task.task_image.url %></p>
    <%if @task.completed%>
      <p class="card-text completed">Completed!</p>
    <% else %>
      <p class="card-text">In progress</p>
    <% end %>
    <%= link_to 'Back to Task List', list_tasks_path(@list), class: "btn btn-outline-info" %>
    <%= link_to 'Edit Task', edit_list_task_path(@list, @task), class: "btn btn-outline-success" %>
  </div>
  <br>
  <div class="card-footer text-muted">
    Last updated: <%= @task.updated_at %>
  </div>
</div>
</div>
